<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RestaurantProfile">


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:text="@string/txtProfile"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/txtName"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="83dp"
            android:text="@string/txtName"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/txtRName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <TextView
            android:id="@+id/txtLast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="30dp"
            android:layout_marginEnd="52dp"
            android:text="@string/txtLast"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/txtRLName"
            app:layout_constraintEnd_toStartOf="@+id/txtRLName"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txtmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="85dp"
            android:layout_marginBottom="35dp"
            android:text="@string/txtMail"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/txtNumber"
            app:layout_constraintEnd_toStartOf="@+id/txtREmail"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txtNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="65dp"
            android:layout_marginBottom="31dp"
            android:text="@string/txtNumber"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/txtAdress"
            app:layout_constraintEnd_toStartOf="@+id/txtRPhone"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txtAdress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="66dp"
            android:layout_marginBottom="30dp"
            android:text="@string/txtAdress"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView2"
            app:layout_constraintEnd_toStartOf="@+id/txtRAdress"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnRSaveChanges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="92dp"
            android:text="@string/btnLogout"
            app:layout_constraintBaseline_toBaselineOf="@+id/btnCEditProfile"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btnCEditProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="44dp"
            android:layout_marginEnd="47dp"
            android:layout_marginBottom="55dp"
            android:text="@string/btnEditProfile"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btnRSaveChanges"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="28dp"
            android:layout_marginEnd="53dp"
            android:text="@string/txtRestaurant"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/txtRRestaurant"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/txtRRestaurant" />

        <TextView
            android:id="@+id/txtRName"
            android:layout_width="0dp"
            android:layout_height="21dp"
            android:layout_marginTop="37dp"
            android:layout_marginEnd="70dp"
            android:layout_marginBottom="34dp"
            app:layout_constraintBottom_toTopOf="@+id/txtRLName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtName"
            app:layout_constraintTop_toTopOf="@+id/textView" />

        <TextView
            android:id="@+id/txtRLName"
            android:layout_width="0dp"
            android:layout_height="21dp"
            android:layout_marginTop="92dp"
            android:layout_marginEnd="70dp"
            android:layout_marginBottom="90dp"
            app:layout_constraintBottom_toTopOf="@+id/txtRPhone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtLast"
            app:layout_constraintTop_toTopOf="@+id/textView" />

        <TextView
            android:id="@+id/txtREmail"
            android:layout_width="0dp"
            android:layout_height="21dp"
            android:layout_marginTop="46dp"
            android:layout_marginEnd="70dp"
            android:layout_marginBottom="46dp"
            app:layout_constraintBottom_toBottomOf="@+id/txtRPhone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtmail"
            app:layout_constraintTop_toBottomOf="@+id/txtLast" />

        <TextView
            android:id="@+id/txtRPhone"
            android:layout_width="0dp"
            android:layout_height="21dp"
            android:layout_marginEnd="74dp"
            android:layout_marginBottom="37dp"
            app:layout_constraintBottom_toTopOf="@+id/txtRAdress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtNumber" />

        <TextView
            android:id="@+id/txtRAdress"
            android:layout_width="0dp"
            android:layout_height="21dp"
            android:layout_marginEnd="70dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtAdress"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txtRRestaurant"
            android:layout_width="0dp"
            android:layout_height="21dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="70dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            app:layout_constraintTop_toBottomOf="@+id/txtRAdress" />


</androidx.constraintlayout.widget.ConstraintLayout>